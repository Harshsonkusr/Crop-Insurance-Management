# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/claimeasy

# JWT Secret (generate a new one for production)
JWT_SECRET=your-jwt-secret-key-min-32-chars

# Encryption Key (for PII encryption - must be 32 bytes hex)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# Aadhaar HMAC Key (for Aadhaar hashing - must be 32 bytes hex)
AADHAAR_HMAC_KEY=your-32-byte-hex-hmac-key

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
